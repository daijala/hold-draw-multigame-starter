{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                // ✅ modern module system
    "moduleResolution": "NodeNext",      // ✅ match Node 22 behavior
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src"]
}
